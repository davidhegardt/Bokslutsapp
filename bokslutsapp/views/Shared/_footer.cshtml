    }
</style>

<!--KONTERINGSFÄLT-->
<table id="kontering" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th colspan="2"><strong>Bokföringsorder</strong></th>
            <th colspan="1"><strong>Text:</strong></th>
            <td colspan="5" width="60%" contenteditable='true'><strong></strong></td>
            <th colspan="2" align="center">Vernr</th>
            <th colspan="2">@ViewBag.testver</th>
        </tr>
        <tr>
            <th colspan="2" width="15%">Konto</th>
            <th colspan="6" width="60%">Kontonamn</th>
            <th colspan="1" width="5%">Ks</th>
            <th colspan="1" width="5%">Pr</th>
            <th colspan="2" width="15%">Belopp</th>
        </tr>
    </thead>
    <tbody id="konteringsrader">
        <tr class="mall">
            <td colspan="2"><input type="text" class="BFkonto" maxlength="4" onchange="konteringsraderKontroll('#konteringsrader',4),kontoValidering(this.value)" /></td>
            <td colspan="6"><input type="text" class="BFkontonamn" size="1000"/></td>
            <td colspan="1"><input type="text" class="BFks" /></td>
            <td colspan="1"><input type="text" class="BFpr" /></td>
            <td colspan="2"><input type="text" class="BFrad" onchange="value = talformat_2dec(this.value), kontoSum()" /></td>
        </tr>
    </tbody>
    <tr>
        <td colspan="10" align="right"><strong>Diff</strong></td>
        <td colspan="2"><strong><input id="BFdiff" type="text" readonly="readonly" /></strong></td>
    </tr>

</table>

<div id="Meddelande"></div>

<p align="right">
    <a href="#" class="btn btn-success btn-lg">
        <span class="glyphicon glyphicon-trash" data-toggle="tooltip" title="Radera bokföringsorder"></span>
    </a>
    <a href="#" class="btn btn-success btn-lg">
        <span class="glyphicon glyphicon-menu-left" data-toggle="tooltip" title="Föregående bokning"></span>
    </a>
    <a href="#" class="btn btn-success btn-lg">
        <span class="glyphicon glyphicon-menu-right" data-toggle="tooltip" title="Nästa bokning"></span>
    </a>
    <a href="#" class="btn btn-success btn-lg">
        <span class="glyphicon glyphicon-floppy-disk" data-toggle="tooltip" title="Registrera bokning"></span>
    </a>
</p>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"></script>
<script src="~/Scripts/generella.funktioner.js"></script>
<script>
    $(document).ready(function () {
        //iterate through each textboxes and add keyup
        //handler to trigger sum event
        konteringsrader_init('#konteringsrader', 4);
        kontoSum();
        

    });


    function kontoSum() {
        $('.BFrad').each(function () {
            $(this).keyup(function () {
                $("#BFdiff").val(talformat_2dec(calcSum(".BFrad")));
            });
        });
    }

    function konteringsraderKontroll(mall, radAntStart) {
        if ($(mall).find('tr:last input').val() != "") {
            addKonteringsrad(mall);
        }
        else if ($(mall).find('tr:last input').val() == "") {
            removeKonteringsrad(mall, radAntStart);
        }
    }

    function konteringsrader_init(mall, radAntStart) { //Funktion som vid initieringen lägger till 4 rader.
        for (var i = 0; i < (radAntStart - 1); i++) {
            addKonteringsrad(mall);
        }
    }

    function addKonteringsrad(mall) { //Funktion för att skapa nya konteringsrader
        var klon = $(mall).find('tr:last').clone();
        //var klon = $('.mall1:last').clone();
        klon.find('input[type=text]').val(null);
        $(mall).append(klon);
        $("#BFdiff").val(calcSum(".BFrad"));
    }

    function removeKonteringsrad(mall, radAntStart) {
        lastRad = $(mall).find('tr');
        if (lastRad.length > radAntStart) {
            // if (this.each() != "") {
            $(mall).find('tr:last').remove(); 
            $("#BFdiff").val(calcSum(".BFrad"));
            // }
        }
    } 
</script>

